@model LoginModel

<div class="container">
    <div class="row justify-content-md-center">
        <div class="col-md-4">
            <h2>Вход на сайт</h2>


            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div>
                    <div class="form-group">
                        <label asp-for="Login">Введите логин</label>
                        <input type="text" class="form-control" asp-for="Login" />
                        <span asp-validation-for="Login" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Введите пароль</label>
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" />
                    </div>
                    <div class="form-group">
                        <input class="btn btn-primary" type="submit" value="Войти" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
